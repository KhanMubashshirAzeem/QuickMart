<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="12sp"
    >

    <ImageView
        android:id="@+id/productImageTop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_1" />

    <TextView
        android:id="@+id/productCategoryTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        android:text="Category"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/favoriteIconTop"
        app:layout_constraintStart_toEndOf="@+id/productImageTop"
        app:layout_constraintTop_toBottomOf="@+id/favoriteIconTop"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/productPriceTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:padding="2dp"
        android:text="$65.80"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/productImageTop"
        app:layout_constraintTop_toBottomOf="@+id/productCategoryTop" />

    <TextView
        android:id="@+id/productNameTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        android:minLines="2"
        android:padding="2dp"
        android:text="TextView\nTextview"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/productImageTop"
        app:layout_constraintTop_toBottomOf="@+id/productPriceTop" />

    <TextView
        android:id="@+id/productModelTop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:padding="2dp"
        android:text="TextView"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/productImageTop"
        app:layout_constraintTop_toBottomOf="@+id/productNameTop" />

    <ImageView
        android:id="@+id/favoriteIconTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/favorite_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>